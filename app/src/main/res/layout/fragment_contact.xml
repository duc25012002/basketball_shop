<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="sportCloth"
            type="com.example.sportclothes.model.SportCloth" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_10"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/define_dimen_14">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="144dp"
                android:layout_height="135dp"
                android:src="@drawable/logo2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_10"
                android:text="@string/holder"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_xnormal" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/define_dimen_14"
            android:layout_marginBottom="@dimen/define_dimen_14" />
    </LinearLayout>

</layout>